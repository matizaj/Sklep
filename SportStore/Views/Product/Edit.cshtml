@model Product
<h2>Edycja produktu</h2>
<p>Prosze podac wymagane dane</p>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-controller="Product" asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />
    <h3>Produkt</h3>
    <div class="form-group">
        <label>Nazwa</label><input asp-for="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label>Opis:</label><input asp-for="Description" class="form-control" />

    </div>
    <div class="form-group">
        <label>Cena</label><input asp-for="Price" class="form-control" />

    </div>
    <div class="form-group">
        <label>Kategoria</label><input asp-for="Category" class="form-control" />
    </div>

    <div class="text-center">
        <input class="=btn btn-primary" type="submit" value="Dodaj" />
    </div>
</form>

